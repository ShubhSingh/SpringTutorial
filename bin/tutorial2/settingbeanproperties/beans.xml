<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

 	<!-- Value for accountNo field is set using property tag-->

 	<bean id="sbi" class="tutorial2.settingbeanproperties.SBIBank">
		<constructor-arg value="Ramesh" type="java.lang.String"
			name="customerName">
		</constructor-arg>
		<constructor-arg value="124" type="int" name="branchCode" />
		<property name="accountNo" value="12345"></property>
 	</bean>
</beans>
